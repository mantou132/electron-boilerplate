{
  "name": "electron-boilerplate",
  "version": "0.0.1",
  "description": "electron boilerplate",
  "main": "./dist/index.js",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "clean": "rimraf ./dist",
    "watch": "npm run clean && cross-env NODE_ENV=development webpack --watch",
    "start": "nodemon --watch dist --exec 'electron ./dist --inspect'",
    "build": "npm run clean && npm run lint && webpack && electron-builder ./dist"
  },
  "keywords": [
    "electron",
    "boilerplate"
  ],
  "author": "mt",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@mantou/gem": "^0.1.11",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/node": "^12.12.6",
    "@types/webpack": "^4.39.8",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "@zeit/webpack-asset-relocator-loader": "^0.6.2",
    "cross-env": "^6.0.3",
    "electron": "^6.1.4",
    "electron-builder": "^21.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "node-loader": "^0.6.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.0",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantou132/electron-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mantou132/electron-boilerplate/issues"
  },
  "homepage": "https://github.com/mantou132/electron-boilerplate#readme"
}
