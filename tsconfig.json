{
  "compilerOptions": {
    "outDir": "./dist",
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["es2018", "dom"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}
