{
  "compilerOptions": {
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2018"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}
